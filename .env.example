# API Gateway 기본 설정
PORT=8080
LOG_LEVEL=info

# 백엔드 서버 설정
BACKEND_URL=http://localhost:8081
BACKEND_URLS=http://localhost:8081,http://localhost:8082,http://localhost:8083

# JWT 인증 설정
JWT_SECRET=your-secret-key-change-in-production
JWT_ISSUER=api-gateway
JWT_EXPIRATION=3600

# CORS 설정
ALLOWED_ORIGINS=*
# 또는 쉼표로 구분된 목록: ALLOWED_ORIGINS=http://localhost:3000,https://example.com

# 타임아웃 설정 (초)
READ_TIMEOUT=20
WRITE_TIMEOUT=20
IDLE_TIMEOUT=120

# 요청 제한 설정
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX_REQUESTS=200
MAX_CONTENT_SIZE=10485760  # 10MB

# 메트릭 설정
ENABLE_METRICS=true

# 캐싱 설정
ENABLE_CACHING=true
CACHE_TTL=300  # 5분

# 서킷 브레이커 설정
CIRCUIT_BREAKER_ERROR_THRESHOLD=0.5  # 50% 오류율
CIRCUIT_BREAKER_MIN_REQUESTS=10
CIRCUIT_BREAKER_TIMEOUT=60  # 60초
CIRCUIT_BREAKER_HALF_OPEN_REQS=5
CIRCUIT_BREAKER_SUCCESS_THRESHOLD=3

# 라우트 설정 경로
ROUTES_CONFIG_PATH=configs/routes.json
