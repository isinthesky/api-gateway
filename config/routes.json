{
  "routes": [
    {
      "path": "/api/users/*path",
      "targetURL": "http://localhost:8081",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "requireAuth": true,
      "stripPrefix": "/api/users"
    },
    {
      "path": "/api/products/*path",
      "targetURL": "http://localhost:8081",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "requireAuth": true,
      "stripPrefix": "/api/products"
    },
    {
      "path": "/api/auth/*path",
      "targetURL": "http://localhost:8081",
      "methods": ["POST", "GET"],
      "requireAuth": false,
      "stripPrefix": "/api/auth"
    },
    {
      "path": "/api/v1/auth/*path",
      "targetURL": "http://receiptally-auth-service:8080",
      "methods": ["POST", "GET"],
      "requireAuth": false,
      "stripPrefix": "/api/v1/auth"
    },
    {
      "path": "/ws/chat/*path",
      "targetURL": "http://localhost:8081",
      "methods": ["GET"],
      "requireAuth": true,
      "stripPrefix": "/ws/chat"
    },
    {
      "path": "/public/*path",
      "targetURL": "http://localhost:8081",
      "methods": ["GET"],
      "requireAuth": false,
      "stripPrefix": "/public"
    }
  ]
}